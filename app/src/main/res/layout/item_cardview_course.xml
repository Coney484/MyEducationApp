<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cointainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:elevation="16dp"
    app:cardCornerRadius="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_background"
            android:layout_width="70dp"
            app:cardBackgroundColor="#40c7db"
            app:cardCornerRadius="16dp"
            android:layout_height="70dp">
            
            <ImageView
                android:id="@+id/img_item_course"
                android:layout_gravity="center"
                android:src="@drawable/ic_android_fill"
                android:layout_width="42dp"
                android:layout_height="42dp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/card_view_background"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            
            <TextView
                android:id="@+id/tv_item_title"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:text="Android Basics"
                android:textColor="@color/Gray"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_item_description"
                android:layout_width="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:textColor="@color/LightGray"
                android:text="Android Development, Building Layout\nAndroid Studio, Views and more "
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>